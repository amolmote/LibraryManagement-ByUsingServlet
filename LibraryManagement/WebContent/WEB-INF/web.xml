<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>LibraryManagement</display-name>
  
  <!-- Regustration servlet -->
  <servlet>
  <servlet-name>RegistrationServlet</servlet-name>
  <servlet-class>com.library.servlet.RegistrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RegistrationServlet</servlet-name>
  <url-pattern>/RegistrationServlet</url-pattern>
  </servlet-mapping>
  
   <!-- login servlet -->
  <servlet>
  <servlet-name>LoginServlet</servlet-name>
  <servlet-class>com.library.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <!-- AddBook servlet -->
  <servlet>
  <servlet-name>AddBookServlet</servlet-name>
  <servlet-class>com.library.servlet.AddBookServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>AddBookServlet</servlet-name>
  <url-pattern>/AddBookServlet</url-pattern>
  </servlet-mapping>
  
  <!-- ViewBook admin servlet -->
  <servlet>
  <servlet-name>ViewBookServlet</servlet-name>
  <servlet-class>com.library.servlet.ViewBookServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ViewBookServlet</servlet-name>
  <url-pattern>/ViewBookServlet</url-pattern>
  </servlet-mapping>
  
   <!-- ViewBook user servlet -->
  <servlet>
  <servlet-name>ViewUserBook</servlet-name>
  <servlet-class>com.library.servlet.ViewUserBook</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ViewUserBook</servlet-name>
  <url-pattern>/ViewUserBook</url-pattern>
  </servlet-mapping>
  
   <!--  user logout servlet -->
  <servlet>
  <servlet-name>LogoutServlet</servlet-name>
  <servlet-class>com.library.servlet.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LogoutServlet</servlet-name>
  <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  
   <!--  user request servlet -->
  <servlet>
  <servlet-name>RequestServlet</servlet-name>
  <servlet-class>com.library.servlet.RequestServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RequestServlet</servlet-name>
  <url-pattern>/RequestServlet</url-pattern>
  </servlet-mapping>
  
  <!--   view request servlet -->
  <servlet>
  <servlet-name>ViewRequestsServlet</servlet-name>
  <servlet-class>com.library.servlet.ViewRequestsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ViewRequestsServlet</servlet-name>
  <url-pattern>/ViewRequestsServlet</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>